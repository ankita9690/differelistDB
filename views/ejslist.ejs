<%- include("header") -%>

    <div class="box" id="heading">
      <h1> <%= title %> </h1>

    </div>

    <div class="box">

      <% list.forEach(function(temp){ %>
        <form  action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="delinput" value="<%=temp._id%>" onchange="this.form.submit()">
            <p> <%= temp.name %> </p>
          </div>
          <input type="hidden" name="titlename" value="<%=title%>"></input>
        </form>
      <% }); %>


            <form class="item" action="/" method="post">
              <input type="text" name="newinput" placeholder="new items" autocomplete="off">
              <button type="submit" name="button" value="<%=title%>"> + </button>
            </form>
    </div>

